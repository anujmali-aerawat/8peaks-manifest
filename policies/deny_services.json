{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyAllAIServices",
      "Effect": "Deny",
      "Action": [
        "sagemaker:*",
        "bedrock:*",
        "bedrock-agentcore:*",
        "comprehend:*",
        "lex:*",
        "polly:*",
        "rekognition:*",
        "textract:*",
        "translate:*",
        "transcribe:*",
        "forecast:*",
        "personalize:*",
        "kendra:*",
        "q:*",
        "qbusiness:*",
        "codewhisperer:*",
        "codeguru:*",
        "codeguru-reviewer:*",
        "codeguru-profiler:*",
        "frauddetector:*",
        "healthlake:*",
        "lookoutmetrics:*",
        "lookoutvision:*",
        "lookoutequipment:*",
        "panorama:*",
        "deeplens:*",
        "aiops:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "DenyLargeInstanceTypes",
      "Effect": "Deny",
      "Action": "ec2:RunInstances",
      "Resource": "arn:aws:ec2:*:*:instance/*",
      "Condition": {
        "StringLike": {
          "ec2:InstanceType": [
            "*.2xlarge",
            "*.4xlarge",
            "*.8xlarge",
            "*.9xlarge",
            "*.12xlarge",
            "*.16xlarge",
            "*.18xlarge",
            "*.24xlarge",
            "*.32xlarge",
            "*.48xlarge",
            "*.metal*"
          ]
        }
      }
    }
  ]
}